<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/repos_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15sp"
        android:text="@string/repos_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/repos_description"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/repos_name"
        app:layout_constraintTop_toBottomOf="@id/repos_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15sp"
        android:textAlignment="textStart"
        android:layout_marginTop="10sp"
        android:text="@string/repos_description"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/repos_image"
        android:layout_width="35sp"
        android:layout_height="35sp"
        app:layout_constraintStart_toStartOf="@id/repos_description"
        app:layout_constraintTop_toBottomOf="@id/repos_description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="10sp"
        />

    <TextView
        android:id="@+id/repos_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/repos_image"
        app:layout_constraintTop_toTopOf="@id/repos_image"
        app:layout_constraintBottom_toBottomOf="@id/repos_image"
        android:layout_marginStart="10sp"
        android:text="@string/repos_owner_name"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/number_of_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/repos_owner_name"
        app:layout_constraintBottom_toBottomOf="@id/repos_owner_name"
        android:layout_marginEnd="15sp"
        android:text="Number of stars"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    <ImageView
        android:layout_width="25sp"
        android:layout_height="25sp"
        app:layout_constraintEnd_toStartOf="@id/number_of_stars"
        app:layout_constraintTop_toTopOf="@id/number_of_stars"
        app:layout_constraintBottom_toBottomOf="@id/number_of_stars"
        android:layout_marginEnd="5sp"
        android:src="@drawable/ic_star"
        />


</androidx.constraintlayout.widget.ConstraintLayout>